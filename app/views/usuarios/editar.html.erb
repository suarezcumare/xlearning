<!-- Usuario/editar perfil -->

<% content_for :css_personalizado do %>
 <%= stylesheet_link_tag    "usuarios" %> 
<% end %>

<div class="text-right">
  <ol class="breadcrumb">
    <li><%= link_to "Home", root_path %></li>
    <li class="active">Editar perfil</li>
  </ol>
</div>
<div class="row pad30">
  <div class="col s3">
    <%= render "usuarios/application/panelPersonal" %>
  </div>
  <div class="col s8 no-padding panel">
    <div class="row">
      <div class="col s3"><h5 class="text-uppercase">Editar perfil</h5></div>
      <div class="col s9">
        <ul class="tabs">
          <li class="tab col s4"><a class="text-capitalize" href="#basico">Información</a></li>
          <li class="tab col s4"><a class="text-capitalize" href="#avatar">cambiar avatar</a></li>
          <li class="tab col s4"><a class="text-capitalize" href="#contrasena">cambiar contraseña</a></li>
        </ul>
      </div>
    </div>
    <div id="basico" class="pad30-h">
      <div class="row">
        <div class="col s12">
          <div class="pad30"></div>
          <%= form_for(resource, :as => resource_name, :url => usuarios_editar_path, :html => { :method => :post }) do |f| %>
            <div class="row">
              <div class="input-field col s6">
                <label for="usuario[nombre]">Nombre</label>
                <input id="usuario[nombre]" type="text" required></input>
              </div>
              <div class="input-field col s6">
                <label for="usuario[apellidos]">Apellido</label>
                <input id="usuario[apellidos]" type="text" required></input>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s6">
                <label for="usuario[email]">Email</label>
                <input id="usuario[email]" type="email" required>         
              </div>
              <div class="col s6">
                <label>País</label>
                <select name="usuario[pais]">
                  <option value="" disabled selected>Escoge tu país</option>
                  <option value="1">Venezuela</option>
                  <option value="2">Colombia</option>
                  <option value="3">Panamá</option>
                </select>
              </div>
            </div>
            <div class="row">
              <div clas="input-field col s6">
                <label>Sexo</label>
                <p>
                  <input name="usuario[sexo]" type="radio" id="sexo_usuario_1" checked class="with-gap"/>
                  <label for="sexo_usuario_1">Masculino</label>
                  <input name="usuario[sexo]" type="radio" id="sexo_usuario_0"  class="with-gap"/>
                  <label for="sexo_usuario_0">Femenino</label>
                </p>
              </div>  
            </div>
            <hr/>
            <div class="row">
              <div class=" form-control col s5">
                <label for="ocupacion_usuario">Ocupación</label>
                <input id="ocupacion_usuario" type="text" required></input>                  
              </div>
            </div>
            
            <div class="col s12 form-control">
              <div class=" col s5">
                <label>Intereses</label>
                <textarea id="intereses_usuario" class="materialize-textarea"></textarea>                
              </div>
              
            </div>
            <div class="col s12">
              <div class="form-control col s5">
                <label for="facebook_usuario">Facebook: </label>
                <input id="facebook_usuario" type="text"></input>                
              </div>
              <div class=" form-control col s5">
                  <label for="twitter_usuario">Usuario Twiiter: </label>
                  <input id="twitter_usuario" type="text"></input>                  
              </div>
            </div>
            <div class="col s12">
              <div class="form-control col s5">
                <label for="web_usuario">web: </label>
                <input id="web_usuario" type="text"></input>     
              </div>    
            </div> 
            <div class="form-control block-center">           
              <a href="" class="btn btn-success">Guardar</a>
              <a href="" class="btn btn-info Closed" data-dismiss="modal">Cancelar</a> 
            </div>          
          <% end %>
        </div>
      </div> 
    </div>
    <div id="avatar">
      <form name="nuevo_material" method="post" multipart="true" action="">
        <div class="row">
          <br/>
          <div class="col s12">
            <div class="col s1 form-control">
               Imagen:
            </div>
            <div class="col s6">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                      <span class="btn btn-primary btn-file"><span class="fileupload-new">Seleccionar Archivo</span>
                       <span class="fileupload-exists">Cambiar</span>         <input type="file" id="file_url" name="foto" accept="image/*"  /></span>
                      <span class="fileupload-preview"></span>
                       <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">×</a>
                  </div> 

            </div>
          </div>
        </div>
      </form>
    </div>
    <div id="contrasena">
      <div class="col s12">
            <br><br><br>
                    <div class="form-control col s5">
                      <label for="clave_usuario">Clave: </label>
                      <input id="clave_usuario" type="password" required>
                      
                  </div>
                  <div class=" form-control col s5">
                      <label for="claveconfirmacion_usuario">Confirmar Clave: </label>
                      <input id="claveconfirmacion_usuario" type="password" required>                  
                  </div>
                </div>

                <div class="col s12">
                    <br><br><br>
                    <div class="form-control col s5">
                      <label for="preguntasecreta_usuario">Pregunta Secreta:: </label>
                      <input id="preguntasecreta_usuario" type="text" required>
                      
                  </div>
                  <div class=" form-control col s5">
                      <label for="respuestaasecreta_usuario">Respuesta Secreta: </label>
                      <input id="respuestaasecreta_usuario" type="text" required>                  
                  </div>
                </div>
    </div>
  </div>
</div>

<% content_for :js_personalizado do %>
  <%= javascript_include_tag 'usuarios' %>
<% end %>

