<div class="card no-margin-v">
	<div class="text-center blue lighten-1">

        <% if ! @usuario.perfil.foto.nil? and @usuario.perfil.foto != "" %>
          <img src="/<%= request.subdomain %>/avatar/<%= @usuario.perfil.foto %>" style="width:65%;"  class="pad15 center-block circle responsive-img">
        <% else %>
        	<img src="/assets/avatar/sinfoto.jpg" style="width:65%;"  class="pad15 center-block circle responsive-img">
        <% end %>
		<h5 class="card-title white-text no-margin-v"> <%= @usuario.nombre + " " + @usuario.apellido %></h5>
		<span class="text-uppercase white-text"><%= @usuario.perfil.ocupacion %></span>
	</div>  
	<div class="card-content text-center no-padding no-padding-v">
		<% if current_usuario.id == @usuario.id %>
			<ul class="bordered text-left hoverable">
				<li><a href="#info" class="text-uppercase" style="display:block;">Info</a></li>
				<li><a href="/usuarios/editar" class="text-uppercase">editar</a></li>
				<li><a href="/preferencias" class="text-uppercase">preferencias</a></li>
				<li><a href="#ayuda" class="text-uppercase">ayuda</a></li>
			</ul>
		<% else %>
			<a class="btn btn-danger" href="javascript:void(0)"> escribir</a>
		<% end %>	
	</div>
</div>
<div class="pad15"></div>
