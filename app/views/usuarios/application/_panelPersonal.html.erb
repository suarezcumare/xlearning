<div class="card no-margin-v">
	<div class="text-center blue lighten-1">
		<img src="/assets/profile_user.jpg" style="width:65%;" 
			class="pad15 center-block circle responsive-img">
		<h5 class="card-title white-text no-margin-v">Jose Gonzáles</h5>
		<span class="text-uppercase white-text">desarrollador</span>
	</div>  
	<div class="card-content text-center no-padding no-padding-v">
		
		<!-- <p class="grey-text darken-4">I am a very simple card. I am good at containing small bits of information. 
		I am convenient because I require little markup to use effectively.</p> -->
		<% if current_usuario.id == @usuario.id %>
			<ul class="bordered text-left hoverable">
				<li><a href="#info" class="text-uppercase" style="display:block;">Info</a></li>
				<li><a href="#editar" class="text-uppercase">editar</a></li>
				<li><a href="#preferencias" class="text-uppercase">preferencias</a></li>
				<li><a href="#ayuda" class="text-uppercase">ayuda</a></li>
			</ul>
		<% else %>
			<a class="btn btn-danger" href="javascript:void(0)"> escribir</a>
		<% end %>	
	</div>
</div>
