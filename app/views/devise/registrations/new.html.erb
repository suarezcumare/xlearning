<div class="pad15"></div>
<div id="form-registro-container" class="pad15 pad15-h center-block panel">
	<div id="titulo">
		<h3>Reg&iacute;strate</h3>
	</div>
	<div id="secciones" style="display:inline-block;">
		<div class="pull-left seccion">
			<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
			  <%= devise_error_messages! %>

			  <div><%= f.label :email, "Email" %><br />
			  <div class="input-group"><%= f.email_field :email, :autofocus => true %>
			  	<div class="estado input-group-addon"></div></div>
			  </div>
			  <div><%= f.label :password, "Contraseña" %><br />
			  <div class="input-group"><%= f.password_field :password, {"maxlength"=>30} %><div class="estado input-group-addon"></div></div>
			</div>

			  <div><%= f.label :password_confirmation, "Confirmar contraseña" %><br />
			  <div class="input-group"><%= f.password_field :password_confirmation, {"maxlength"=>30} %><div class="estado input-group-addon"></div></div>
			</div>
			  <div><%= check_box_tag(:terminos) %>
				   <%= label_tag(:terminos, "Acepto los términos de uso") %></div>
			  <div><%= f.submit "Enviar", class: "btn btn-danger" %>
			  	   <br/> O reg&iacute;strate con 
				   <a href="javascript:void(0)" class="fb"><i class="fa fa-facebook"></i></a>
				   <a href="javascript:void(0)" class="tw"><i class="fa fa-twitter"></i></a>
				   <a href="javascript:void(0)" class="gp"><i class="fa fa-google-plus"></i></a>
			  </div>

			<% end %>
		</div>
		<div class="pull-left seccion text-center">
			<div class="pad45">
				<i class="mdi-action-perm-contact-cal"></i><br>
				Si ya tienes una cuenta <a href="#login-form" class="modal-trigger">inicia sesi&oacute;n</a>
			</div>
		</div>
	</div>
</div>

<div class="pad30"></div>

