<div id ="login-form" class="panel panel-info modal">
	<!-- <div class="panel-heading text-center">
		<h3 class="panel-title">Inicia sesi&oacute;n</h3>
	</div> -->
	<div class="panel-body">
		<%= form_for(:usuario, :url => entrar_url,
				:html => {:id => "form-iniciar-sesion"}) do |f| %>
		  	<legend class="text-center">Inicia sesi&oacute;n</legend>
		  		<div class="input-field">
			  		<%= f.email_field :email, :autofocus => true %>
			  		<%= f.label :email,"Email" %>
		  		</div>
		  		<div class="input-field">
			  		<%= f.password_field :password, {"id"=>"password"} %>
			  		<%= f.label :password, "Contraseña" %>
		  		</div>
			  <% if devise_mapping.rememberable? -%>
			    <span class="pull-right"><%= f.check_box :remember_me %> <%= f.label :remember_me, "No cerrar sesión" %></span>
			  <% end -%>
			  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
				  <%= link_to "Olvide mi contraseña", new_password_path(resource_name) %><br />
			  <% end -%>
			  <input type="submit" value="Entrar" class= "btn btn-primary"></input>
			  
			  <div class="text-center">
			  <strong>O inicia sesi&oacute;n con </strong>
			  <a href="<%= omniauth_authorize_path(resource_name, :facebook) %>" class="fb"><i class="fa fa-facebook"></i></a>
			  <a href="javascript:void(0)" class="tw"><i class="fa fa-twitter"></i></a>
			  <a href="javascript:void(0)" class="gp"><i class="fa fa-google-plus"></i></a>
			</div>
		<% end %>
	</div>
	<div class="panel-footer text-center">
		 <%= link_to "Crea una cuenta", new_registration_path(resource_name) %>
	</div>
</div>
