<% content_for :js_personalizado do%>
  <%= javascript_include_tag 'jquery.knob.min' %>
  <script>
    $(function() {
        $(".curso_progreso").knob({
          'min':0,
          'max':100,
          'readOnly':true,
          'width':60,
          'thickness':0.3
        });
    });
  </script>
<% end %>